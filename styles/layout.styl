/** anchor offset for fix header*/
.anchor::before{
  content:"";
  display: block;
  position: relative;
  height:70px;
  visibility: hidden;
  margin:-70px 0 0;
}


/** header and nav */
header{
  display: flex;
  height: 64px;

  /** fixed header*/
  position: fixed;
  top: 0;
  width: 100%;


  .logo{
    right: 12px;
    top: 12px;
    position: absolute;
  }

  .title{
    //margin title for burger
    margin: 0.4em 0em 0em 1.8em;
  }

  .menu-toggle{
    position: absolute;
    .menu-open, .menu-close{
      position: absolute;
    }

    .menu-close{
      display: none;
    }
    
    padding: 1.5em 1em 0em 1.5em;
  }

  .main-menu{
    display: none;

    position: absolute;
    top: 64px; /* header height*/
    width: 100%;

    ul{
      margin:  0;
      padding-left: 0;
      margin-bottom: 0;
      list-style: none;

      li{
        padding: 0em 1em;

        a {
          display: block;
          padding: .75em 15px;
          line-height: 1em;
          font-size: 1em;
          text-decoration: none;
          border-bottom: 1px solid #383838;
        }
      }
    }

  }

  /** show menu wenn url target is main-menu */
  .main-menu:target,
  .main-menu[aria-expanded="true"] {
    display: block;

    border-top: 1px solid #000;
  }

  /** show menu-close wenn url target is main-menu 
  * close element musst be after main-menu
  */
  .main-menu:target + .menu-toggle >.menu-close,
  .main-menu[aria-expanded="true"] + .menu-toggle >.menu-close {
    display: block;
  }

  /** hide menu-open wenn url target is main-menu 
  * open element musst be after main-menu
  */
  .main-menu:target + .menu-toggle >.menu-open,
  .main-menu[aria-expanded="true"] + .menu-toggle >.menu-open {
    display: none;
  }
}

/** bigger then mobile */
@media screen and (min-width: 425px) {
    header{
      display: flex;
      align-items:baseline;

      .title{
        margin: 0.4em 0em 0em 0.4em;
        text-decoration: none;
      }

      .menu-toggle{
        display: none;
      }

      .main-menu{
        position relative;
        top: 0;
        display: block;
        ul{
          display: flex;
          flex-direction: row;
  
          li{
            padding: 0em 1em;

            a{
              border-bottom: none;
            }
          }
        }
      }
  }
}


main{
  &.container{
      margin: 0px 1em 1em 1em;
  }
}