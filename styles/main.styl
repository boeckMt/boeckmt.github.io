@import "../node_modules/@fortawesome/fontawesome-free/css/all.css";

@import '../node_modules/s-grid/s-grid-settings';
@import '../node_modules/s-grid/s-grid-functions';
@import '../node_modules/s-grid/s-grid-classes';

@import "layout";

html, body{
    margin: 0;
    padding: 0;
    width: 100%;
    height 100%;
    font-family: 'Indie Flower', cursive;
}

header{
  -webkit-box-shadow: 0 3px 5px rgba(57, 63, 72, 0.3);
  -moz-box-shadow: 0 3px 5px rgba(57, 63, 72, 0.3);
  box-shadow: 0 3px 5px rgba(57, 63, 72, 0.3);
  
  .logo{
    &:hover{
      webkit-transform: perspective(1px) translateX(10px) rotate(-10deg);
      transform: perspective(1px) translateX(10px) rotate(-10deg);
      }
  }

  .menu-link{
    &:hover{
      border-bottom: 2px solid;
    }
  }
}

header, .main-menu{
  //border: 1px solid;
  background-color: #fff;
  a{
    color: #942942;
  }
}

/* Screen reader only */
.sr-only {
  position: absolute;
  width: 1px;
  height: 1px;
  padding: 0;
  margin: -1px;
  overflow: hidden;
  clip: rect(0,0,0,0);
  border: 0;
}

#banner{
    width: 100%;
    img{
      width: 100%;
      height auto;
    }
  }

main{
  section{
    padding-bottom: 1em;
    img.responsiv-image{
      width: 100%;
    }
    h3{
      color: #942942;
    }
  }

  figure{
    text-align: center;
  }
}

footer {
  overflow: hidden;
  width: 100%;
    img{
      filter: blur(1px);
      width: 100%;
      height auto;
    }
}


